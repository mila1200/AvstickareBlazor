@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider Theme="AvstickareCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="background-color: #009688; color: #000000;" >

        <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="@DrawerToggle" Edge="Edge.Start"
            Color="Color.Inherit" />

        <!-- Mitten: logotyp -->
        <MudSpacer />
        <MudText Class="d-flex justify-center align-center">
            <img src="images/Avstickare_white.svg" alt="Logotyp" height="35px;" />
        </MudText>
        <MudSpacer />

        <!-- höger: användarikon -->
        <MudStack>
            <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Size="Size.Large" /> 
        </MudStack>

    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Style="background-color: #F8F9FA; color: #000000;">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme AvstickareCustomTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#009688",
            Secondary = "#223843",
            Tertiary = "#FFD54F",
            Background = "#F8F9FA",
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Nunito", "Helvetica", "Arial", "sans-serif" }
            }
        }
    };
}